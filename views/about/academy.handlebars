<!-- InstanceBeginEditable name="main" -->
<article class="container" id="academy">
	<div class="row">
		<div class="nine centered columns text-center">
			<h2 class="quattrocento">Shingo Academy</h2>
			<hr>
			<p>The Shingo Academy consists of individuals who are actively involved in and have distinguished themselves in the area of operational excellence. Members of the Academy serve as promotional ambassadors for the Shingo Institute and its activities.</p>
		</div>
	</div>
	<br>
	<div class="row">
		<table class="striped">
			<thead>
				<tr>
					<th>Member</th>
					<th>Position</th>
					<th>Company</th>
				</tr>
			</thead>
			<tbody>
				{{#each academy}}
					<tr>
						<td>{{Name}}</td>
						<td>{{Title}}</td>
						<td>{{Account.Name}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</article>
<!-- InstanceEndEditable -->
