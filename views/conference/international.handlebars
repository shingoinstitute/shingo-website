              <p>{{{event.Sales_Text__c}}}</p>
            </div>
        </div>
        <!-- <div class="hidden" id="agenda">&nbsp;</div> -->
    </article>

    <article class="container">
      <div class="row text-center">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/LmWhXbdOze0" frameborder="0" allowfullscreen></iframe>
      </div>
    </article>

    <div id="agenda"></div>
    {{>_intl-agenda event=event}}

    <div id="registration"></div>
    <article class="container" id="s-registration">
        <div class="row">
            <div class="six columns centered">
                <h3 class="text-center">REGISTRATION</h3>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="seven columns">
                <table>
                    <thead>
                        <tr>
                            <th colspan="2">
                                <h4>Pricing for Main Conference</h4></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each event.Shingo_Prices__r.records}}
                            <tr>
                                <td>
                                    <h5>{{this.Name}}</h5>
                                </td>
                                <td>
                                    <h5>${{this.Price__c}}</h5>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                <p class="text-center">** Student &amp; Active Military Conference Discount: $450</p>
            </div>
            <div class="five columns text-center">
                <br>
                <br>
                <div class="text-center large info btn"><a href="{{event.Registration_Link__c}}" target="_blank">Register</a></div>
                <br>
                <br>
                <!-- <p id="discount"></p> -->
            </div>
        </div>
        <!-- <div class="hidden" id="speakers">&nbsp;</div> -->
    </article>

    <div id="speakers"></div>
    <article class="container" id="s-speakers">
        <div class="row">
            <div class="six columns centered">
                <h3 class="text-center">SPEAKERS</h3>
                <hr>
            </div>
        </div>
        <div class="row" id="all-speakers">

            <!-- Keynote Speakers -->
            <h4 class="text-center">Keynote Speakers</h4>
            <ul class="three_up tiles speakers">
                {{#each keynote}}
                    {{>_intl-speaker speaker=this}}
                {{/each}}
            </ul>
            {{#each keynote}}
                {{>_intl-speaker-bio speaker=this}}
            {{/each}}

            <!-- Concurrent Speakers -->
            <h4 class="text-center">Concurrent Speakers</h4>
            <ul class="four_up tiles speakers">
                {{#each concurrent}}
                    {{>_intl-speaker speaker=this}}
                {{/each}}
            </ul>
            {{#each concurrent}}
                {{>_intl-speaker-bio speaker=this}}
            {{/each}}

        </div>
        <!-- <div class="hidden" id="travel">&nbsp;</div> -->
    </article>

    <div id="travel"></div>
